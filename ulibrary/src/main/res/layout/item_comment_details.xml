<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/bg"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/item_comment_details_profile_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_comment_details_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="李时珍"
                    android:textColor="@color/subtitle_and_name_color"
                    android:textSize="15sp" />

                <cc.urowks.ulibrary.widget.StarsLayout
                    android:id="@+id/item_comment_details_starslayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <TextView
                android:id="@+id/item_comment_details_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="果你如果你如果你如果你如果你如果你如果你如果你如果你如果你如果你如果你"
                android:textColor="@color/hint_and_content_color"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_comment_details_pic_one_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/primary_color" />

                <ImageView
                    android:id="@+id/item_comment_details_pic_two_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/primary_color" />

                <ImageView
                    android:id="@+id/item_comment_details_pic_three_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/primary_color" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
